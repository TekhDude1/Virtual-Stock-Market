<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    android:layout_margin="3dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp"

    android:layout_height="wrap_content"
    android:padding="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/orderpage_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="3dp"
            android:padding="1dp"
            android:text="Type"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/orderpage_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="0dp"
            android:layout_toLeftOf="@+id/orderpage_price"
            android:layout_toEndOf="@+id/orderpage_type"
            android:padding="1dp"
            android:text="Symbol"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/orderpage_buyprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderpage_symbol"
            android:layout_alignStart="@+id/orderpage_symbol"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="2dp"
            android:padding="3dp"
            android:paddingBottom="2dp"
            android:text="BuyPrice"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/orderpage_buyquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderpage_symbol"
            android:layout_toEndOf="@id/orderpage_buyprice"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="2dp"
            android:layout_toLeftOf="@+id/orderpage_pricepercent"
            android:padding="3dp"
            android:paddingBottom="2dp"
            android:text="BuyQty"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:id="@+id/orderpage_price"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/orderpage_pricepercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderpage_price"
            android:textSize="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="4dp"
            android:text="Percent"
            android:paddingBottom="2dp"
            android:textColor="@color/black" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:buttonTint="#00E35A"
            android:visibility="gone"
            android:id="@+id/watchlist_checkbox"/>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>